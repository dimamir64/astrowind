---
import Layout from "../layouts/Layout.astro";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return redirect("/dashboard");
}
---

<Layout title="Вход в систему">
  <h1>Войти в систему</h1>
  <p>Нет аккаунта? <a href="/register">Создать аккаунт</a></p>
  <form action="/api/auth/signin" method="post">
    <label for="email" for="email">Email</label>
    <input type="email" name="email" id="email" />
    <label for="password">Пароль</label>
    <input type="password" name="password" id="password" />
    <button type="submit">Войти</button>
    <button value="yandex" name="provider" type="submit">Войти через Яндекс</button>
    <button value="github" name="provider" type="submit">Войти через GitHub</button>
  </form>
</Layout>